      <td style="border-right: 2px solid;" rowspan="2"><%= link_to airline.name, airline_path(airline.id) %></td>
      <td style="border-right: 2px solid;" rowspan="2"><%= to_all(airline.posts, :star_full) %></td>
      <td style="border-right: 2px solid;" rowspan="2"><%= airline.posts.count %></td>
      <td style="border-bottom: 1px solid #999999; border-right: 2px solid"><%= to_star(airline.posts.order_star1.star_full) %></td>
      <td style="border-bottom: 1px solid #999999; border-right: 2px solid"><%= to_star(airline.posts.order_star2.star_full) %></td>
    </tr>
    <tr>
      <td style="border-right: 2px solid; padding: 5px"><%= truncate(airline.posts.order_star1.review, length: 100) %></td>
      <td style="border-right: 2px solid; padding: 5px"><%= truncate(airline.posts.order_star2.review, length: 100) %></td>
    </tr>
